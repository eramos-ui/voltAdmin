datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
  //url      = "sqlserver://localhost;database=MyDB;trustServerCertificate=true;Connection Timeout=300;Query Timeout=300"
}

generator client {
  provider = "prisma-client-js"
}

model Menu {
  id    Int    @id @default(autoincrement())
  title String
  path  String
  icon  String
  form   String?
  idSystem Int
  idProcess Int?
  idActivity Int?
  isValid Boolean @default(true) 
  orden Int?
  processType Int?
}


model User {
  id                Int       
  dateModification  DateTime
  name              String
  userModification  Int?       
  email             String    
  avatar            String?   @db.NVarChar(Max)
  theme             String
  password          String 
  aditionalData     String?
  resetToken        String?  
  resetTokenExpiry  DateTime?
  roleId            Int       // Foreign key to Role model
  phone             String?
  rut               String?
  valid             Boolean @default(true) 
  idSystem          Int
  idPeril           Int? 
  @@id([id, dateModification]) // Definimos la clave primaria compuesta aqu√≠
}

model Role {
  id     Int     @id @default(autoincrement())
  name   String  @unique // Role name, e.g., 'admin', 'user', 'editor'
  rol    String
  idProcess Int
}
model Form {
  id               Int    @id @default(autoincrement())
  name             String @unique
  valid            Boolean @default(true)     
  jsonForm         String @db.NVarChar(Max)
}
model RoleMenuPermissions {
  roleId     Int
  menuId     Int
  subMenuId  Int
  @@id([roleId, menuId, subMenuId])
}